{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "downlevelIteration": true,
    "importHelpers": true,
    "module": "es2020",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "hxl-preview-ng-lib": [
        "dist/hxl-preview-ng-lib/hxl-preview-ng-lib",
        "dist/hxl-preview-ng-lib"
      ]
    }
  },
  "angularCompilerOptions": {
    "strictInjectionParameters": true
  }
}
